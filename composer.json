{
    "name": "clarkwinkelmann/flarum-ext-popular-discussion-badge",
    "description": "Adds a popular badge to discussion based on replies or number of views",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": ">=0.1.0-beta.15 <0.1.0-beta.16",
        "ext-json": "*",
        "fof/console": "^0.6.0"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-popular-discussion-badge",
        "forum": "https://discuss.flarum.org/d/24490"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\PopularDiscussionBadge\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Popular Discussion",
            "category": "discussion",
            "icon": {
                "name": "fas fa-fire",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/24490"
        }
    }
}
